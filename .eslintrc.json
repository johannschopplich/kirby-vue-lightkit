{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["vue", "jsdoc"],
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:jsdoc/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "vue/no-v-html": "off"
  },
  "settings": {
    "jsdoc": {
      "mode": "typescript"
    }
  }
}
